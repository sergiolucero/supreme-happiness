import sqlite3, pandas as pd
import glob
import time
import re

men = pd.read_csv('keywords2.txt', header=0)  # redone 21/04 concepto, tema
matches = lambda wt: len(list(re.finditer(wt[0].lower(), wt[1])))
conn=sqlite3.connect('greenpeace.db')

pfiles = {'todos': list(glob.glob('TEXTOS/TODOS/*.txt')),
          'originarios': list(glob.glob('TEXTOS/ORIGINARIOS/*.txt')),
}

for tabla, files in pfiles.items():
    nProgramas = len(files)
    print('nProgramas:', nProgramas)

    t0 = time.time()
    textos=[open(fn).read() for fn in files]
    print('DT:', round(time.time()-t0,2))  # 0.11 sec

    nmatches=[]
    amatches=[]
    print('TEMAS:', men['tema'])
    for word in men['tema']:
        nmatches.append(sum(matches([word,text]) for text in textos))   # missing space?
        amatches.append(sum([1 if word in text else 0 for text in textos])/nProgramas)    # normalized 20/04

    men['nMenciones']=nmatches
    men['\% Mencionan']=[round(100*amat,2) for amat in amatches]

    BASE= 'http://greenpeace.quant.cl:8081'
    #men['link']=['%s/ver_menciones/%s/50' %(BASE,tema.replace(' ','_')) 
    #            for tema in men.Tema]
    table = f'menciones_{tabla}'
    men.to_sql(table, conn, index=False, if_exists='replace')

    print(f'SAVED {len(men)} menciones to {table}')
